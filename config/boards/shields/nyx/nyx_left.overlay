/ {
    chosen {
        zmk,keyboard = &kscan0;
    };
};

&kscan0 {
    compatible = "zmk,kscan-gpio-matrix";
    poll-period-ms = <1>;

    /* Rows 0‑4 (shared across halves) */
    row-gpios = < &gpio1 11 (GPIO_PULL_UP | GPIO_ACTIVE_LOW) >
                < &gpio1 12 (GPIO_PULL_UP | GPIO_ACTIVE_LOW) >
                < &gpio1 13 (GPIO_PULL_UP | GPIO_ACTIVE_LOW) >
                < &gpio1 14 (GPIO_PULL_UP | GPIO_ACTIVE_LOW) >
                < &gpio1 15 (GPIO_PULL_UP | GPIO_ACTIVE_LOW) >;

    /* Columns 0‑5 — LEFT half only */
    col-gpios = < &gpio0 29 GPIO_ACTIVE_HIGH >
                < &gpio0 31 GPIO_ACTIVE_HIGH >
                < &gpio0 2  GPIO_ACTIVE_HIGH >
                < &gpio0 3  GPIO_ACTIVE_HIGH >
                < &gpio0 28 GPIO_ACTIVE_HIGH >
                < &gpio0 30 GPIO_ACTIVE_HIGH >;

    diode-direction = <2>;          /* COL2ROW */
};
