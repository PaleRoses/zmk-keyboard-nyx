# Nyx Split Keyboard Configuration Defaults
# This file defines configuration settings applied when shields are active

# Configuration for left half (central)
if SHIELD_NYX_LEFT

config ZMK_KEYBOARD_NAME
    default "Nyx"

config ZMK_SPLIT_ROLE_CENTRAL
    default y

endif

# Configuration for right half (peripheral)
if SHIELD_NYX_RIGHT

config ZMK_KEYBOARD_NAME
    default "Nyx"

endif

# Configuration for both halves
if SHIELD_NYX_LEFT || SHIELD_NYX_RIGHT

config ZMK_SPLIT
    default y

endif