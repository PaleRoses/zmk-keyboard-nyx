/*
 * nyx.dtsi — shared Devicetree include for the Nyx split keyboard.
 *
 * Both halves (nyx_left & nyx_right) include this file. It contains:
 *   • Common kscan node with 7 ROW GPIOs (left‑side header pins on a
 *     nice!nano v2 in Pro‑Micro orientation).
 *   • A matrix‑transform spanning **12 columns × 7 rows = 84 keys**
 *     (6 columns per half).
 *   • chosen { } entries to bind ZMK to this scanner & transform.
 *
 * Update notes
 * -------------
 * ▸ Confirm the ROW GPIO order matches your wiring (Row 0‑6).
 * ▸ Each overlay supplies *six* column pins for its half, totalling 12.
 * ▸ The RC() map below lists 84 entries (row‑major). Adjust to match
 *   your physical key order and mark blanks with RC(‑1,‑1) if desired.
 */

/ {
    /* ────────────────────────── Keyboard Matrix Scanner ───────── */
    kscan0: kscan {
        compatible = "zmk,kscan-gpio-matrix";

        diode-direction = "col2row"; /* isolation diodes col → row */

        /* ROW GPIOs — order defines row indices 0‑6 */
        row-gpios = < &gpio0 31 (GPIO_PULL_DOWN | GPIO_ACTIVE_HIGH) >, /* R0  P0.31 */
                    < &gpio0 29 (GPIO_PULL_DOWN | GPIO_ACTIVE_HIGH) >, /* R1  P0.29 */
                    < &gpio0  2 (GPIO_PULL_DOWN | GPIO_ACTIVE_HIGH) >, /* R2  P0.02 */
                    < &gpio1 15 (GPIO_PULL_DOWN | GPIO_ACTIVE_HIGH) >, /* R3  P1.15 */
                    < &gpio1 13 (GPIO_PULL_DOWN | GPIO_ACTIVE_HIGH) >, /* R4  P1.13 */
                    < &gpio1 11 (GPIO_PULL_DOWN | GPIO_ACTIVE_HIGH) >, /* R5  P1.11 */
                    < &gpio0 10 (GPIO_PULL_DOWN | GPIO_ACTIVE_HIGH) >; /* R6  P0.10 */

        /* COLUMN GPIOs are defined per half in nyx_left/right overlays */
    };

    /* ────────────────────── Matrix‑to‑KeyPos Transform ─────────── */
    #include <dt-bindings/zmk/matrix_transform.h>

    default_transform: keymap_transform_0 {
        compatible = "zmk,matrix-transform";

        /* 6 columns per half → 12 total */
        columns = <12>;
        rows    = <7>;

        /*
         * 84 RC() entries (7 rows × 12 columns), row‑major order.
         * Fill according to your logical layout.  Example placeholder
         * sequence provided below — replace with real mapping.
         */
        map = <
            /* Row 0 */ RC(0,0) RC(0,1) RC(0,2) RC(0,3) RC(0,4) RC(0,5) RC(0,6) RC(0,7) RC(0,8) RC(0,9) RC(0,10) RC(0,11)
            /* Row 1 */ RC(1,0) RC(1,1) RC(1,2) RC(1,3) RC(1,4) RC(1,5) RC(1,6) RC(1,7) RC(1,8) RC(1,9) RC(1,10) RC(1,11)
            /* Row 2 */ RC(2,0) RC(2,1) RC(2,2) RC(2,3) RC(2,4) RC(2,5) RC(2,6) RC(2,7) RC(2,8) RC(2,9) RC(2,10) RC(2,11)
            /* Row 3 */ RC(3,0) RC(3,1) RC(3,2) RC(3,3) RC(3,4) RC(3,5) RC(3,6) RC(3,7) RC(3,8) RC(3,9) RC(3,10) RC(3,11)
            /* Row 4 */ RC(4,0) RC(4,1) RC(4,2) RC(4,3) RC(4,4) RC(4,5) RC(4,6) RC(4,7) RC(4,8) RC(4,9) RC(4,10) RC(4,11)
            /* Row 5 */ RC(5,0) RC(5,1) RC(5,2) RC(5,3) RC(5,4) RC(5,5) RC(5,6) RC(5,7) RC(5,8) RC(5,9) RC(5,10) RC(5,11)
            /* Row 6 */ RC(6,0) RC(6,1) RC(6,2) RC(6,3) RC(6,4) RC(6,5) RC(6,6) RC(6,7) RC(6,8) RC(6,9) RC(6,10) RC(6,11)
        >;
    };

    /* ───────────────────────────── Chosen Nodes ────────────────── */
    chosen {
        zmk,kscan = &kscan0;
        zmk,matrix-transform = &default_transform;
    };
};
